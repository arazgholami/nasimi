#!/bin/bash

# Check if a file argument is provided
if [ -z "$1" ]; then
    echo "Error: No file provided."
    echo "Usage: nasimi <file.py>"
    exit 1
fi

# Check if the file exists
if [ ! -f "$1" ]; then
    echo "Error: File $1 does not exist."
    exit 1
fi

# Run the Python file with python3
python3 nasimi.py "$1"